generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Artist {
  id        Int     @id @default(autoincrement())
  artist    String  @unique
  genre     String
  pronoun   String
  artistUrl String
  songUrl   String
  createdAt DateTime @default(now())
  createdBy String
  Alias     Alias[]
}

model Alias {
  id        Int    @id @default(autoincrement())
  alias     String
  artist    Artist @relation(fields: [artistId], references: [id])
  artistId  Int
  createdAt DateTime @default(now())
  createdBy String

  @@index([artistId])
}
